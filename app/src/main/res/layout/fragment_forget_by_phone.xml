<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.ak47.checkin_app.forgetpassword.ForgetByPhoneFragment"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="150px"
        android:src="@drawable/phone"
        android:id="@+id/imageView" />
    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText

            android:id="@+id/etPhoneNum"
            android:hint="输入手机号码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText

            android:id="@+id/etVerifyCode"
            android:hint="输入验证码"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginRight="10px"
            android:layout_weight="1"
            android:layout_gravity="bottom" />

        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:id="@+id/btnGetCode"
            android:layout_gravity="right"
            android:layout_weight="2" />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText

            android:id="@+id/etPwd"
            android:inputType="textEmailAddress"
            android:layout_marginRight="10px"
            android:hint="输入新的的密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>
    <Button
        android:id="@+id/btnResetPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16px"
        android:textSize="35px"
        android:textColor="@color/bn_blue"
        android:text="重设密码"/>
</com.zhy.autolayout.AutoLinearLayout>
