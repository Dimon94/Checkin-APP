<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/fgMain"
    android:orientation="vertical"
    android:gravity="center_horizontal">
<!-- tools:context="com.ak47.checkin_app.MainActivity$PlaceholderFragment"-->
    <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拍照"
        android:id="@+id/bnTakePhoto"
        android:layout_marginTop="110dp"
        android:layout_below="@+id/tvTittle"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="录像"
        android:id="@+id/bnTakeMedia"
        android:layout_below="@+id/bn_get_locatoin"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="定位"
        android:id="@+id/bn_get_locatoin"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成签到！"
        android:id="@+id/bnCheckIn"
        android:layout_below="@+id/bnTakeMedia"
        android:layout_alignLeft="@+id/bnTakeMedia"
        android:layout_alignStart="@+id/bnTakeMedia" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
